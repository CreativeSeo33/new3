<footer class="w-full border-t bg-white mt-10">
  <div class="container mx-auto px-4 py-8 text-sm text-gray-600">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4">
      <div>
        &copy; {{ "now"|date("Y") }} {{ site_name|default('Symfony Shop') }}. Все права защищены.
      </div>
      <div class="flex items-center gap-4">
        {% if footer_links is defined %}
          {% for link in footer_links %}
            <a href="{{ link.url }}" class="hover:text-blue-600">{{ link.label }}</a>
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</footer>



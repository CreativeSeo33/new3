<footer class="w-full bg-gray-100 border-t mt-10">
  <div class="container mx-auto py-12">
    
    <!-- Footer Middle - Links -->
    {% set categories = footer_categories.getFooterCategories() %}
    {% set half = (categories|length / 2)|round(0, 'ceil') %}
    
    <!-- Headers Row - Desktop Only -->
    <div class="hidden lg:grid grid-cols-4 gap-8 mb-4">
      <div>
        <div class="h3 text-lg font-semibold text-gray-900">КАТЕГОРИИ</div>
      </div>
      <div>
        
      </div>
      <div>
        <div class="h3 text-lg font-semibold text-gray-900">ИНФОРМАЦИЯ</div>
      </div>
      <div>
        <div class="h3 text-lg font-semibold text-gray-900">&nbsp;</div>
      </div>
    </div>
    
    <!-- Content Row -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-10">
      <!-- Categories Column 1 -->
      <div>
        <div class="h3 text-lg font-semibold text-gray-900 mb-4 lg:hidden">КАТЕГОРИИ</div>
        <ul class="space-y-2">
          {% for category in categories|slice(0, half) %}
            <li>
              <a href="{{ path('catalog_category_show', {slug: category.slug}) }}"
                 class="footer-link transition-colors duration-200">
                {{ category.name }}
              </a>
            </li>
          {% else %}
            <li><span class="text-gray-400 text-sm">Категории не найдены</span></li>
          {% endfor %}
        </ul>
      </div>
      
      <!-- Categories Column 2 -->
      <div>
        <div class="h3 text-lg font-semibold text-gray-900 mb-4 lg:hidden">КАТЕГОРИИ</div>
        <ul class="space-y-2">
          {% for category in categories|slice(half) %}
            <li>
              <a href="{{ path('catalog_category_show', {slug: category.slug}) }}"
                 class="footer-link transition-colors duration-200">
                {{ category.name }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
      
      <!-- Useful Information -->
      <div>
        <div class="h3 text-lg font-semibold text-gray-900 mb-4 lg:hidden">ИНФОРМАЦИЯ</div>
        <ul class="space-y-2">
          <li><a href="{{ path('catalog_about') }}" class="footer-link">О нас</a></li>
          <li><a href="{{ path('catalog_contacts') }}" class="footer-link">Контакты</a></li>
          <li><a href="{{ path('catalog_dostavka') }}" class="footer-link">Доставка</a></li>
          
        </ul>
      </div>
      
      <!-- Column 4 - No Title -->
      <div>
        <!-- Logo Section -->
        <div class="flex items-center">
          <a href="{{ path('catalog_index') }}" class="flex items-center gap-3">
            {% if logo_url is defined and logo_url %}
              <img src="{{ logo_url }}" alt="{{ site_name|default('Shop') }}" class="h-12 w-auto" />
            {% else %}
              <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center">
                <span class="text-white font-bold text-xl">L</span>
              </div>
            {% endif %}         
          </a>
        </div>
      </div>
    </div>
    
    <!-- Footer Bottom -->
    <div class="flex flex-col md:flex-row items-center justify-between pt-6 border-t border-gray-300">
      <div class="text-gray-600 text-sm mb-4 md:mb-0">
        &copy; {{ "now"|date("Y") }} {{ site_name|default('Symfony Shop') }}. Все права защищены.
      </div>
      
    </div>
  </div>
</footer>



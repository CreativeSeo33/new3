{% set list = breadcrumbs|default(items|default([])) %}
{% if list is not empty %}
  <nav class="font-sans text-sm pt-5" aria-label="breadcrumb">
    <ol class="list-none p-0 inline-flex flex-wrap">
      {% for crumb in list %}
        {% if not loop.last %}
          {% if crumb.label is defined %}
            <li class="flex items-center">
              <a href="{{ crumb.url|default('#') }}" class="hover:text-blue-600">{{ crumb.label }}</a>
              <span class="mx-1 text-gray-400" aria-hidden="true">
                <svg xmlns="http://www.w3.org/2000/svg" class="inline h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </li>
          {% else %}
            {% for name, link in crumb %}
              <li class="flex items-center">
                <a href="{{ link }}" class="hover:text-blue-600">{{ name }}</a>
                <span class="mx-1 text-gray-400" aria-hidden="true">
                  <svg xmlns="http://www.w3.org/2000/svg" class="inline h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                  </svg>
                </span>
              </li>
            {% endfor %}
          {% endif %}
        {% else %}
          {% if crumb.label is defined %}
            <li class="flex items-center hidden sm:block text-gray-800">{{ crumb.label }}</li>
          {% else %}
            {% for name, link in crumb %}
              <li class="flex items-center hidden sm:block text-gray-800">{{ name }}</li>
            {% endfor %}
          {% endif %}
        {% endif %}
      {% endfor %}
    </ol>
  </nav>
{% endif %}


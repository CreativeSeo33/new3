{% extends 'catalog/base.html.twig' %}

{% block title %}
  {{ product.metaTitle ?? product.name }} — {{ parent() }}
{% endblock %}

{% block catalog_body %}
  <div class="container mx-auto px-4 py-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        {% set firstImage = product.image|sort((a,b) => a.sortOrder <=> b.sortOrder)|first %}
        {% if firstImage %}
          {% set raw = firstImage.imageUrl %}
          {% if raw starts with '/media/cache/' %}
            {% set imgSrc = raw %}
          {% else %}
            {% set rel = raw|replace({'/img/':''})|trim('/') %}
            {% set imgSrc = asset('/img/' ~ rel) | imagine_filter('md2') %}
          {% endif %}
          <img src="{{ imgSrc }}" alt="{{ product.name }}" class="w-full h-auto rounded-md shadow" />
        {% else %}
          <img src="https://via.placeholder.com/500" alt="{{ product.name }}" class="w-full h-auto rounded-md shadow" />
        {% endif %}
      </div>

      <div class="flex flex-col gap-4">
        <h1 class="text-2xl font-semibold">{{ product.metaH1 ?? product.name }}</h1>

        {% if product.getEffectivePrice() %}
          <div class="text-xl font-bold text-gray-900">{{ product.getEffectivePrice() }}</div>
        {% endif %}

        {% if product.description %}
          <div class="prose max-w-none">{{ product.description }}</div>
        {% endif %}

        <div class="mt-4">
          <button type="button" data-product-id="{{ product.id }}" class="js-add-to-cart btn inline-flex items-center gap-x-2 bg-green-600 text-white border-green-600 disabled:opacity-50 disabled:pointer-events-none hover:text-white hover:bg-green-700 hover:border-green-700 active:bg-green-700 active:border-green-700 focus:outline-none focus:ring-4 focus:ring-green-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-plus" width="18" height="18" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path d="M12 5l0 14"></path>
              <path d="M5 12l14 0"></path>
            </svg>
            <span>Купить</span>
          </button>
        </div>

        {% if product.optionAssignments is defined and product.optionAssignments|length > 0 %}
          <div class="mt-6">
            <div class="mb-2 text-sm font-medium">Опции</div>
            {% set items = product.optionAssignments|sort((a,b) => (a.option.sortOrder <=> b.option.sortOrder) ?: ((a.sortOrder ?? 2147483647) <=> (b.sortOrder ?? 2147483647))) %}
            <ul class="space-y-1 text-sm text-gray-800">
              {% for a in items %}
                <li>
                  <span class="font-medium">{{ a.option.name ?? ('Опция #' ~ a.option.id) }}</span>:
                  <span>{{ a.value.value ?? ('Значение #' ~ a.value.id) }}</span>
                  {% set parts = [] %}
                  {% if a.height is not null %}{% set parts = parts|merge(['Высота: ' ~ a.height]) %}{% endif %}
                  {% if a.bulbsCount is not null %}{% set parts = parts|merge(['Лампочек: ' ~ a.bulbsCount]) %}{% endif %}
                  {% if a.sku %}{% set parts = parts|merge(['Артикул: ' ~ a.sku]) %}{% endif %}
                  {% if a.originalSku %}{% set parts = parts|merge(['Ориг. артикул: ' ~ a.originalSku]) %}{% endif %}
                  {% if a.price is not null %}{% set parts = parts|merge(['Цена: ' ~ a.price]) %}{% endif %}
                  {% if a.salePrice is not null %}{% set parts = parts|merge(['Со скидкой: ' ~ a.salePrice]) %}{% endif %}
                  {% if a.lightingArea is not null %}{% set parts = parts|merge(['Площадь освещения: ' ~ a.lightingArea]) %}{% endif %}
                  {% if a.quantity is not null %}{% set parts = parts|merge(['Кол-во: ' ~ a.quantity]) %}{% endif %}
                  {% if parts|length %}
                    — <span class="text-gray-500">{{ parts|join(', ') }}</span>
                  {% endif %}
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}

        {# Debug коллекции атрибутов товара #}
        {% if app.debug %}
          <div class="mt-4 p-3 rounded border border-yellow-300 bg-yellow-50 text-xs text-yellow-900">
            <div class="font-medium mb-1">DEBUG: product.productAttributeGroups</div>
            {{ dump(product.productAttributeGroups) }}
          </div>
        {% endif %}

        {# Характеристики товара (атрибуты) #}
        {% set attr_items = [] %}
        {% for pag in product.productAttributeGroups %}
          {% for pa in pag.attribute %}
            {% set attr_name = pa.attribute ? (pa.attribute.name ?? ('Атрибут #' ~ (pa.attribute.id ?? ''))) : 'Атрибут' %}
            {% set attr_value = pa.text %}
            {% set gsort = pag.attributeGroup ? (pag.attributeGroup.sortOrder ?? 2147483647) : 2147483647 %}
            {% set asort = pa.attribute ? (pa.attribute.sortOrder ?? 2147483647) : 2147483647 %}
            {% set attr_items = attr_items|merge([{
              name: attr_name,
              value: attr_value,
              group: pag.attributeGroup ? (pag.attributeGroup.name ?? null) : null,
              gsort: gsort,
              asort: asort
            }]) %}
          {% endfor %}
        {% endfor %}
        {% if attr_items|length > 0 %}
          {% set sorted_attrs = attr_items|sort((a,b) => (a.gsort <=> b.gsort) ?: (a.asort <=> b.asort) ?: (a.name <=> b.name)) %}
          <div class="mt-6">
            <div class="mb-2 text-sm font-medium">Характеристики</div>
            <ul class="space-y-1 text-sm text-gray-800">
              {% for it in sorted_attrs %}
                <li>
                  <span class="text-gray-500">{{ it.name }}:</span> <span>{{ it.value is not empty ? it.value : '—' }}</span>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}



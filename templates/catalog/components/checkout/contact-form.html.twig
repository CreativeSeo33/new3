{# ai:component=checkout-contact-form map=@component_checkout_contact_form_map.mdc v=1 #}
<section class="p-4 border rounded" data-testid="contact-form-section">
  <h2 class="text-lg font-medium mb-4">Контактные данные</h2>
  <form id="checkout-form" class="space-y-4">
    <div class="grid grid-cols-1 gap-4">
      <div>
        <label for="firstName" class="block text-sm mb-1">Имя</label>
        <input id="firstName" name="firstName" value="{{ (checkout.customer.name ?? '')|e }}" placeholder="Имя Отчество" class="w-full border rounded px-3 py-2" required />
      </div>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div>
        <label for="phone" class="block text-sm mb-1">Телефон</label>
        <input
          id="phone"
          name="phone"
          type="text"
          inputmode="tel"
          autocomplete="tel"
          pattern="^\+?[0-9\s\-\(\)]{10,20}$"
          placeholder="+7 (___) ___-__-__"
          class="w-full border rounded px-3 py-2"
          value="{{ (checkout.customer.phone ?? '')|e }}"
          required
          data-controller="phone-mask"
        />
      </div>
      <div>
        <label for="email" class="block text-sm mb-1">E-mail</label>
        <input id="email" name="email" value="{{ (checkout.customer.email ?? '')|e }}" placeholder="E-mail" type="email" class="w-full border rounded px-3 py-2" />
      </div>
    </div>
    <div>
      <label for="comment" class="block text-sm mb-1">Комментарий к заказу</label>
      <textarea id="comment" name="comment" class="w-full border rounded px-3 py-2" rows="3" placeholder="Пожелания к заказу">{{ (checkout.comment ?? checkout.customer.comment ?? '')|e }}</textarea>
    </div>
  </form>
  
</section>


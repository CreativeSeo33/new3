{# ai:component=city-modal map=@component_city-modal_map.mdc v=1 #}
<div id="city-modal" class="fixed inset-0 z-50 hidden" aria-hidden="true" data-module="city-modal" data-testid="city-modal-root">
  <div class="absolute inset-0 bg-black/30" data-backdrop></div>
  <div class="relative mx-auto mt-24 w-full max-w-md bg-white rounded-lg shadow-lg" data-dialog>
    <div class="flex items-center justify-between p-4 border-b">
      <h3 class="text-base font-semibold text-gray-900">Выберите город</h3>
      <button type="button" class="p-1 text-gray-500 hover:text-gray-700" data-close>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
      </button>
    </div>
    <div class="p-4 border-b" data-testid="city-modal-search">
      <div data-module="autocomplete" data-placeholder="Ваш город" data-input-selector="#city-modal-input" data-commit="select-city"></div>
      <input id="city-modal-input" type="text" autocomplete="off" placeholder="Ваш город" class="mt-2 w-full border rounded px-3 py-2" />
    </div>
    <div class="max-h-96 min-h-24 overflow-y-auto" id="city-modal-list" data-list data-testid="city-modal-list"></div>
  </div>
  <template data-spinner-template>
    {{ include('components/spinner.html.twig', {
      id: 'city-modal',
      visible: true,
      overlay: true,
      size: 'medium'
    }) }}
  </template>
</div>


